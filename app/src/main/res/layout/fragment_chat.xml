<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ignitech.rapochinki.Fragment.ChatFragment"
    android:background="#e8e8e8e8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidak ada pesan"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <id.ignitech.rapochinki.Material.EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/btn_not_pressed"
            android:hint="Ketikkan pesan"
            android:inputType="textEmailAddress"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="50dp"
            android:paddingTop="12dp"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_send_orange"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>


</RelativeLayout>
